<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.now.naaga.presentation.beginadventure.BeginAdventureViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.beginadventure.BeginAdventureActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_beginAdventure_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_gray_opacity_medium"
            app:lottie_rawRes="@raw/simple_loading"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:elevation="8dp"
            tools:layout_editor_absoluteY="-146dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_beginAdventure_setting"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_setting" />

        <ImageView
            android:id="@+id/iv_beginAdventure_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_logo_white"
            android:layout_marginTop="4dp"
            app:layout_constraintDimensionRatio="1:1.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_beginAdventure_1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_beginAdventure_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_beginAdventure_begin"
            style="@style/BeginActivity.Text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{viewModel.adventure == null ? @string/beginAdventure_do_adventure_landscape : @string/beginAdventure_continue_adventure}"
            android:textSize="44sp"
            android:background="@drawable/bg_yellow_button"
            android:layout_marginEnd="16dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/btn_beginAdventure_upload"
            app:layout_constraintStart_toStartOf="@id/gl_beginAdventure_1"
            app:layout_constraintTop_toTopOf="@+id/btn_beginAdventure_upload"
            app:layout_constraintBottom_toBottomOf="@+id/btn_beginAdventure_myPage"
            tools:text="모험 시작" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_beginAdventure_upload"
            style="@style/BeginActivity.Text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="20sp"
            android:background="@drawable/bg_blue_button"
            android:text="@string/beginAdventure_upload_place"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/btn_beginAdventure_begin"
            app:layout_constraintBottom_toTopOf="@id/btn_beginAdventure_myPage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_beginAdventure_setting" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_beginAdventure_myPage"
            style="@style/BeginActivity.Text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/beginAdventure_my_page"
            android:textSize="20sp"
            android:background="@drawable/bg_blue_button"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_beginAdventure_upload"
            app:layout_constraintStart_toStartOf="@id/btn_beginAdventure_upload"
            app:layout_constraintEnd_toEndOf="@+id/btn_beginAdventure_upload"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_building"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="1.7:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_beginAdventure_1"
            android:id="@+id/imageView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
