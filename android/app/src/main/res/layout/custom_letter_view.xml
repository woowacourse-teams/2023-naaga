<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_letter_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/main_dark_blue"
            app:layout_constraintBottom_toBottomOf="@id/iv_letter_icon"
            app:layout_constraintEnd_toEndOf="@id/iv_letter_icon"
            app:layout_constraintStart_toStartOf="@id/iv_letter_icon"
            app:layout_constraintTop_toTopOf="@id/iv_letter_icon" />

        <ImageView
            android:id="@+id/iv_letter_icon"
            android:layout_width="56dp"
            android:padding="10dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_letter_send" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
