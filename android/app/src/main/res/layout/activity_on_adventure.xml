<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.now.naaga.presentation.onadventure.OnAdventureViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.onadventure.OnAdventureActivity">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_onAdventure_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="80dp"
            android:elevation="4dp"
            android:visibility="gone"
            android:background="@color/main_gray_opacity_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_rawRes="@raw/walking_loading"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_onAdventure_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_onAdventure_destination_is_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/onAdventure_nearby"
                android:fontFamily="@font/main_font"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:visibility="@{viewModel.isNearby() ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/ll_onAdventure_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isNearby() ? View.GONE : View.VISIBLE}"
                android:layout_marginBottom="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tv_onAdventure_to_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/main_font"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:text="@string/onAdventure_to_destination" />

                <TextView
                    android:id="@+id/tv_onAdventure_left_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/main_font"
                    android:textColor="@color/white"
                    android:textSize="64sp"
                    android:layout_marginStart="24dp"
                    android:text="@{@string/onAdventure_left_distance(viewModel.distance)}"
                    tools:text="172" />

                <TextView
                    android:id="@+id/tv_onAdventure_meter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/main_font"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:text="@string/onAdventure_meter" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_onAdventure_map"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_onAdventure_top" />

        <com.naver.maps.map.widget.LocationButtonView
            android:id="@+id/btn_onAdventure_navermap_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_onAdventure_arrived"
            android:layout_marginBottom="@dimen/space_default_medium"
            android:layout_marginStart="@dimen/space_default_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.naver.maps.map.widget.CompassView
            android:id="@+id/navermap_compass_onAdventure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_default_medium"
            android:layout_marginTop="@dimen/space_default_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_onAdventure_arrived"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/space_default_medium"
            android:background="@drawable/rect_white_radius_small"
            android:backgroundTint="@color/selector_main_gray_purple"
            android:elevation="4dp"
            android:enabled="@{viewModel.isNearby()}"
            android:fontFamily="@font/pretendard_bold"
            android:text="@{viewModel.isNearby() ? @string/onAdventure_end_adventure : @string/onAdventure_on_adventure}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_onAdventure_photo"
            app:layout_constraintEnd_toStartOf="@id/iv_onAdventure_give_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_onAdventure_photo"
            tools:text="모험 종료" />

        <ImageView
            android:id="@+id/iv_onAdventure_give_up"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="@dimen/space_default_medium"
            android:background="@drawable/rect_white_radius_small"
            android:backgroundTint="@color/main_red"
            android:elevation="4dp"
            android:padding="@dimen/space_default_medium"
            app:layout_constraintBottom_toBottomOf="@id/iv_onAdventure_photo"
            app:layout_constraintEnd_toStartOf="@id/iv_onAdventure_hint"
            app:srcCompat="@drawable/ic_drop" />

        <ImageView
            android:id="@+id/iv_onAdventure_hint"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="@dimen/space_default_medium"
            android:background="@drawable/rect_white_radius_small"
            android:backgroundTint="@color/main_mint"
            android:elevation="4dp"
            android:padding="@dimen/space_default_medium"
            app:layout_constraintBottom_toBottomOf="@id/iv_onAdventure_photo"
            app:layout_constraintEnd_toStartOf="@id/iv_onAdventure_photo"
            app:srcCompat="@drawable/ic_hint" />

        <ImageView
            android:id="@+id/iv_onAdventure_photo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="@dimen/space_default_medium"
            android:layout_marginBottom="@dimen/space_default_medium"
            android:background="@drawable/rect_white_radius_small"
            android:backgroundTint="@color/main_mint"
            android:elevation="4dp"
            android:padding="@dimen/space_default_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_photo" />

        <TextView
            android:id="@+id/tv_onAdventure_hint_count"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/oval_radius_midium"
            android:backgroundTint="@color/red"
            android:elevation="4dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="-12dp"
            android:layout_marginEnd="-12dp"
            app:layout_constraintBottom_toTopOf="@id/iv_onAdventure_hint"
            app:layout_constraintEnd_toEndOf="@id/iv_onAdventure_hint"
            tools:text="1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
